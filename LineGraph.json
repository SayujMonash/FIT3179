{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "data": {
    "url": "https://sayujmonash.github.io/FIT3179/LineCountry.csv"
  },
  
  "selection": {
  "year_highlight": {
  "type": "multi",
  "fields": ["year"],
  "bind": "legend"
  }
 },
 
  "config": {},
  "mark": {
    "type": "line",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "month_abb",
      "type": "ordinal",
      "title": null,
      "sort": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
    },
    "y": {
      "field": "metropolitan",
      "type": "quantitative",
      "title": null,
      "scale": {
        "domain": [0,1000]
      }
    },
    "color": {
      "field": "year",
      "title": "Year",
      "scale": {
        "range": ["#9acae9", "#ff7f0e", "#d62728", "#4c78a8", "#e78ac3"]
      }
    },
    "opacity": {
      "condition": {"selection": "year_highlight", "value": 1},
      "value": 0.15
     },
    
    "tooltip": [
      {
        "field": "metropolitan",
        "title": "Number of accidents"
      },
      {
        "field": "month",
        "title": "Month"
      },
      {
        "field": "year",
        "title": "Year"
      }
    ]
  }
}